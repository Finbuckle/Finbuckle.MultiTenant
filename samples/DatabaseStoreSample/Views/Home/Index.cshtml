@model TenantInfo

@{
    ViewData["Title"] = "Database Store Sample";
}

<p>TenantInfo pulled from Data/MultiTenantData.db SQLite database.</p>
<p>See the DatabaseStore class for implementation details.</p>
<p>Select a tenant in the top right menu to see its details from the database.</p>

@if(Model != null)
{
    <h3 class="mt-4">TenantInfo Values</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Property</th>
                <th>Value</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>@nameof(Model.Id)</td>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <td>@nameof(Model.Identifier)</td>
                <td>@Model.Identifier</td>
            </tr>
            <tr>
                <td>@nameof(Model.Name)</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>@nameof(Model.ConnectionString)</td>
                <td>@Model.ConnectionString</td>
            </tr>
        </tbody>
    
    </table>
}
else
{
    <span class="text-muted">No tenant found.</span>
}