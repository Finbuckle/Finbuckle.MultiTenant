<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
</head>
<body>
	<nav class="navbar navbar-expand navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Home</a>
            <div class="navbar-nav mr-auto">
                <a class="nav-item nav-link" href="/SharedLogin">Shared Login</a>
                <a asp-controller="Home" asp-action="Index" asp-route-__tenant__="acme" class="nav-item nav-link">ACME</a>
                <a asp-controller="Home" asp-action="Index" asp-route-__tenant__="megacorp" class="nav-item nav-link">MegaCorp</a>
                <a asp-controller="Home" asp-action="Index" asp-route-__tenant__="initech" class="nav-item nav-link">Initech</a>
            </div>
            @if (Context.GetMultiTenantContext<TenantInfo>().TenantInfo != null)
            {
                <partial name="_LoginPartial" />
            }
        </div>
    </nav>
    <div class="container mt-5">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>