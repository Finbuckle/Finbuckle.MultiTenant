@model TenantInfo

@{
    ViewData["Title"] = "Static Strategy Sample";
}

@if(Model != null)
{
    <h3 class="mt-4">TenantInfo Values</h3>

    <table class="table">
        <thead>
            <tr>
                <th style="width:25%">Property</th>
                <th>Value</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>@nameof(Model.Id)</td>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <td>@nameof(Model.Identifier)</td>
                <td>@Model.Identifier</td>
            </tr>
            <tr>
                <td>@nameof(Model.Name)</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>@nameof(Model.ConnectionString)</td>
                <td>@Model.ConnectionString</td>
            </tr>
        </tbody>
    
    </table>
    
    <div class="jumbotron">
        <h1 class="display-4">Hello, world!</h1>
        <p class="lead">This sample highlights the <a href="https://www.finbuckle.com/MultiTenant/Docs/Strategies#static-strategy">static multitenant strategy</a>.</p>
        <hr class="my-4">
        <p>
            For each request the <em>finbuckle</em> is used as the tenant id to resolve the tenant.
        </p>
        <p>
            Configuration in <code>Startup.cs</code>:
        </p>
        <pre><code>// In ConfigureServices:
services.AddMultiTenant()... // Set up a store...
    WithStaticStrategy("finbuckle");</code></pre>
    </div>
}